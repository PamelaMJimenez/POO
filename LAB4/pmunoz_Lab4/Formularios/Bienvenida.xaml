<Window x:Class="pmunoz_Lab3.Formularios.Bienvenida"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pmunoz_Lab3.Formularios"
        mc:Ignorable="d"
        Title="Bienvenida" Height="280" Width="470">
    <Grid x:Name="pnlBienvenida" Background="#FF004F59">
        <Label x:Name="lblBienvenida" Content="BIENVENIDA(O) A LA FARMACIA DEL PUEBLO" HorizontalAlignment="Left" Margin="14,7,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Bahnschrift Condensed" FontSize="30"/>
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="166" Margin="132,60,0,0" VerticalAlignment="Top" Width="176" Source="/Formularios/pastilla1.png"/>
        <Button x:Name="btnIngresar" Content="INGRESAR" HorizontalAlignment="Left" Margin="296,189,0,0" VerticalAlignment="Top" Height="36" Width="120" BorderBrush="{x:Null}" FontFamily="Bahnschrift Condensed" FontSize="22" FontWeight="Bold" Click="btnIngresar_Click" Foreground="White" Background="{x:Null}"/>
    </Grid>
</Window>
